<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_signText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/SubtitleText"
            android:gravity="center"
            android:text="签名"
            android:textColor="@color/font_2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_signText"
                style="@style/SubtitleText"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/font_2"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/background_light_deep" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/SubtitleText"
            android:gravity="center"
            android:text="职业"
            android:textColor="@color/font_2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_profession"
                style="@style/SubtitleText"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/font_2"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/background_light_deep" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hobbyText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/SubtitleText"
            android:text="爱好"
            android:textColor="@color/font_2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_hobbyText"
                style="@style/SubtitleText"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/font_2"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/background_light_deep" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_beenThere"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/SubtitleText"
            android:text="去过"
            android:textColor="@color/font_2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_beenThere"
                style="@style/SubtitleText"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/font_2"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/background_light_deep" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>