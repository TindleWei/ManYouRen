<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_square_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_scenics_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="陕西省历史博物馆"
            android:textColor="@color/text_dark87"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/scenic_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:hint="暂无该地点数据"
            android:textColor="@color/text_dark54"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_scenics_add"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_purple_noborder"
        android:text="添加"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>