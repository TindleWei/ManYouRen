<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/selector_square_grey" >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    
    <ImageView
        android:id="@+id/iv_recent_avatar"
        style="@style/AvatarLarge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/gravatar_icon" />

    <TextView
        android:id="@+id/recent_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/iv_recent_avatar"
        android:singleLine="true"
        android:text="name"
        android:textColor="@color/text_dark87"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recent_time_text"
        style="@style/NoteText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/recent_name_text"
        android:paddingRight="15dp"
        android:paddingTop="4dp"
        android:textColor="@color/text_dark54"
        android:text="date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recent_msg_text"
        style="@style/NoteText"
        android:layout_alignLeft="@id/recent_name_text"
        android:layout_below="@id/recent_name_text"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        android:textColor="@color/text_dark54"
        android:text="content"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/recent_unread"
        android:layout_width="16dip"
        android:layout_height="16.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/recent_time_text"
        android:layout_alignRight="@id/recent_time_text"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4.0dp"
        android:background="@drawable/list_newmessage2"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="10.0dip" />


</RelativeLayout>