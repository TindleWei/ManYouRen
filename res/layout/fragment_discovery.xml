<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <include layout="@layout/headerview_discovery" />

    <com.manyouren.manyouren.widget.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/disc_item_manyoudai"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_square_grey"
                android:clickable="true" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="@color/background_light_deep" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background_light_deep" />

                <ImageView
                    android:id="@+id/iv_quan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_explore_circle" />

                <TextView
                    style="@style/NormalText"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_quan"
                    android:text="漫游圈"
                    android:textColor="@color/text_dark87"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/disc_item_jianren"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/selector_square_grey"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/iv_ren"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_explore_nearby_users" />

                <TextView
                    style="@style/NormalText"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_ren"
                    android:text="捡人"
                    android:textColor="@color/text_dark87"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background_light_deep" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/disc_item_meidi"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/selector_square_grey"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_simple_meidi" />

                <TextView
                    style="@style/NormalText"
                    android:layout_marginLeft="10dp"
                    android:text="周边美地"
                    android:textColor="@color/font_1"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </com.manyouren.manyouren.widget.ElasticScrollView>

</LinearLayout>