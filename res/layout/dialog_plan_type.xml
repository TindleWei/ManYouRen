<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_iv_for"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_for_play" />

        <TextView
            android:id="@+id/dialog_tv_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dialog_iv_for"
            android:textColor="@color/font_1"
            android:textSize="16sp"
            android:text="游玩" />
        
        <TextView
            android:id="@+id/tip_tv_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/dialog_tv_for"
            android:layout_below="@id/dialog_tv_for"
            android:textColor="@color/font_2"
            android:textSize="14sp"
            android:text="选择和朋友一起出去游玩" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_iv_with"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_for_play" />

        <TextView
            android:id="@+id/dialog_tv_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dialog_iv_with"
            android:textColor="@color/font_1"
            android:textSize="16sp"
            android:text="自己" />
        
        <TextView
            android:id="@+id/tip_tv_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/dialog_tv_with"
            android:layout_below="@id/dialog_tv_with"
            android:textColor="@color/font_2"
            android:textSize="14sp"
            android:text="选择和朋友一起出去游玩" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialog_iv_seek"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_for_play" />

        <TextView
            android:id="@+id/dialog_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dialog_iv_seek"
            android:textColor="@color/font_1"
            android:textSize="16sp"
            android:text="建议" />
        
        <TextView
            android:id="@+id/tip_tv_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/dialog_tv_seek"
            android:layout_below="@id/dialog_tv_seek"
            android:textColor="@color/font_2"
            android:textSize="14sp"
            android:text="选择和朋友一起出去游玩" />
    </RelativeLayout>


</LinearLayout>