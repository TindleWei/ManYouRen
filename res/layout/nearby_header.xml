<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Item_card_inner_frame"
    android:layout_height="80dp"
    android:background="@drawable/item_bg"
    android:padding="0dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ImageView
        android:id="@+id/iv_avatar"
        style="@style/AvatarLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="6dp"
        android:src="@drawable/head_jobs" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:singleLine="true"
        android:text="漫游号:9"
        android:textSize="15sp"
        android:textColor="@color/table_text_selector" />

    <TextView
        android:id="@+id/tv_day"
        style="@style/NoteText"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:text="在西安"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />
    
    <View
        android:id="@+id/view_middle"
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@id/tv_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/view_middle"
        android:padding="4dp"
        android:src="@drawable/icon_nearby_none" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/NoteText"
        android:layout_alignBottom="@id/tv_name"
        android:layout_toRightOf="@id/iv_status"
        android:padding="4dp"
        android:singleLine="true"
        android:text="想做点什么"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_blue" />

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@id/iv_status"
        android:layout_below="@id/iv_status"
        android:padding="4dp"
        android:src="@drawable/icon_loc_blue" />

    <TextView
        android:id="@+id/tv_location"
        style="@style/NoteText"
        android:layout_alignBottom="@id/iv_location"
        android:layout_toRightOf="@id/iv_location"
        android:padding="4dp"
        android:singleLine="true"
        android:text="我在哪里"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/default_blue" />

</RelativeLayout>