<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="@drawable/bg_comment_edit"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_comment_send"
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_purple_noborder"
        android:text="发送"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/et_commment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@id/btn_comment_send"
        android:hint="来评论一下"
        android:maxLines="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text=""
        android:textColor="@color/text_dark54"
        android:textColorHint="@color/text_dark54"
        android:textSize="15sp" >
    </EditText>

</RelativeLayout>