<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_plan_destination"
        style="@style/SubtitleText"
        android:text=""
        android:textColor="@color/text_dark54"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_plan_time"
        style="@style/SubtitleText"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:text=""
        android:textColor="@color/text_dark54"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_plan_postscript"
        style="@style/SubtitleText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:singleLine="false"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/text_dark54"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/user_plan_image_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_plan_image1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gravatar_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_plan_image2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/gravatar_image"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_plan_image3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/gravatar_image"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>