<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popwindow"
        android:padding="20dip" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:gravity="center_vertical"
                    android:text="您想看到的用户"
                    android:textColor="@color/menu_text"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/dialog_rg_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/dialog_rb_gender0"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_left"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="全部"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/dialog_rb_gender1"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_center"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="男"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/dialog_rb_gender2"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_right"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="女"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/dialog_rg_place"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/dialog_rb_place0"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_left"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="全部"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/dialog_rb_place1"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_center"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="当地"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/dialog_rb_place2"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_tab_right"
                        android:button="@null"
                        android:gravity="center"
                        android:minHeight="33dip"
                        android:text="外地"
                        android:textColor="@color/font_2"
                        android:textSize="14sp" />
                </RadioGroup>


                <View
                    style="@style/ViewSeparator"
                    android:background="#aae0e0e0"
                    android:layout_marginTop="20dip"
                    android:layout_width="fill_parent"
                    android:layout_height="2px" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12.0dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/dialog_filter_cancel"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog_left"
                        android:text="取消"
                        android:textColor="@color/menu_text"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/dialog_filter_submit"
                        android:layout_width="0dip"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dialog_right"
                        android:text="确认"
                        android:textColor="@color/menu_text"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>