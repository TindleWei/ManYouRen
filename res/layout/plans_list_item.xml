<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Item_card_inner_frame"
    android:layout_height="100dp"
    android:background="@drawable/selector_square_grey"
    android:padding="0dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="96dp" />

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/iv_avatar"
            style="@style/AvatarCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/gravatar_icon" />

        <TextView
            android:id="@+id/tv_man_from"
            android:layout_width="40dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:background="@drawable/ic_city_female_bg"
            android:gravity="center"
            android:maxEms="5"
            android:text="西安"
            android:visibility="gone"
            android:textColor="@color/text_light87"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:id="@+id/tv_destination"
            style="@style/SubtitleText"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/layout_type"
            android:text="目的地"
            android:textColor="@color/text_dark87"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_city"
            style="@style/SubtitleText"
            android:layout_alignBottom="@id/tv_destination"
            android:layout_toRightOf="@id/tv_destination"
            android:paddingTop="4dp"
            android:text=""
            android:textColor="@color/text_dark54"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/SecondText"
            android:layout_alignLeft="@id/tv_destination"
            android:layout_below="@id/tv_destination"
            android:layout_marginTop="6dp"
            android:paddingBottom="4dp"
            android:text="2014/1/12 星期六"
            android:textColor="@color/text_dark54"
            android:textSize="12dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_date"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_divider" />

        <TextView
            android:id="@+id/tv_note"
            style="@style/SecondText"
            android:layout_alignLeft="@id/tv_destination"
            android:layout_below="@id/tv_date"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="计划与朋友一起去游玩，寻求同伴,希望找到吃货们一起吃小吃。"
            android:textColor="@color/text_dark54"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_destination"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_with"
                style="@style/ImagePlanIcon"
                android:src="@drawable/ic_planfor_play_g" />

            <ImageView
                android:id="@+id/iv_for"
                style="@style/ImagePlanIcon"
                android:src="@drawable/ic_planwith_single_b" />

            <ImageView
                android:id="@+id/iv_seek"
                style="@style/ImagePlanIcon"
                android:src="@drawable/ic_planseek_advice_y" />
        </LinearLayout>

       <LinearLayout
            android:id="@+id/nonelayout_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="4dp" >

            <TextView
                android:id="@+id/tv_plan_from"
                style="@style/SecondText"
                android:visibility="gone"
                android:text=" 北京"
                android:textColor="@color/text_dark54"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>